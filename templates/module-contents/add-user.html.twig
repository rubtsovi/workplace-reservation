<div class="container">
	<a href="/app/user/" data-router class="btn btn-primary rounded-pill mb-5">
		<i class="icon icon-reply"></i>
		Cofnij
	</a>
	<form data-after-success-url="/app/user/" id="add-user-form" class="needs-validation" action="/app/api/create-user/">

		<div class="form-group row">
			<label for="firstName-input" class="col-sm-3 col-form-label">
				Imię
			</label>
			<div class="col-sm-9">
				<input type="text" class="form-control" name="firstName" id="firstName-input">
			</div>
		</div>
		<div class="form-group row">
			<label for="lastName-input" class="col-sm-3 col-form-label">
				Nazwisko
			</label>
			<div class="col-sm-9">
				<input type="text" class="form-control" name="lastName" id="lastName-input">
			</div>
		</div>
		<div class="form-group row">
			<label for="email-input" class="col-sm-3 col-form-label">
				Adres email
			</label>
			<div class="col-sm-9">
				<input type="email" class="form-control" name="email" id="email-input">
			</div>
		</div>
		<div class="form-group row">
			<label for="phone-input" class="col-sm-3 col-form-label">
				Numer telefonu
			</label>
			<div class="col-sm-9">
				<input type="text" class="form-control" name="phone" id="phone-input" pattern="\+?\(?\d{0,2}\)?\s?\(?\d{0,3}\)?\s?-?\d{0,3}\s?-?\d{0,3}\s?-?\d{0,3}">
			</div>
		</div>
		<div class="form-group row">
			<label for="password-input" class="col-sm-3 col-form-label">
				Hasło
			</label>
			<div class="col-sm-9">
				<input type="text" class="form-control" name="password" id="password-input">
			</div>
		</div>
		<div class="form-group row">
			<label for="description-input" class="col-sm-3 col-form-label">
				Opis
			</label>
			<div class="col-sm-9">
				<textarea name="description" id="description-input" class="form-control" rows="5"></textarea>
			</div>
		</div>
		<button class="btn btn-primary rounded-pill" id="submit-btn">
			<i class="icon icon-add"></i>
			Dodaj
		</button>
	</form>
</div>
