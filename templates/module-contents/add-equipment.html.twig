<div class="container">
	<a href="/app/equipment/" data-router class="btn btn-primary rounded-pill mb-5">
		<i class="icon icon-reply"></i>
		Cofnij
	</a>
	<form data-after-success-url="/app/equipment/" id="add-equipment-form" class="needs-validation" action="/app/api/create-equipment/">

		<div class="form-group row">
			<label class="col-sm-3 col-form-label">
				Rodzaj
			</label>
			<div class="col-sm-9">
				<div class="custom-control custom-radio">
					<input type="radio" id="equipment-type-1" name="type" class="custom-control-input" value="Komputery">
					<label class="custom-control-label" for="equipment-type-1">
						Komputery
					</label>
				</div>
				<div class="custom-control custom-radio">
					<input type="radio" id="equipment-type-2" name="type" class="custom-control-input" value="Inne RTV">
					<label class="custom-control-label" for="equipment-type-2">
						Inne RTV
					</label>
				</div>
				<div class="custom-control custom-radio">
					<input type="radio" id="equipment-type-3" name="type" class="custom-control-input" value="Artykuły biurowe">
					<label class="custom-control-label" for="equipment-type-3">
						Artykuły biurowe
					</label>
				</div>
			</div>
		</div>
		<div class="form-group row">
			<label for="model-input" class="col-sm-3 col-form-label">
				Model
			</label>
			<div class="col-sm-9">
				<input type="text" class="form-control" name="model" id="model-input">
			</div>
		</div>
		<div class="form-group row">
			<label for="signature-input" class="col-sm-3 col-form-label">
				Oznaczenie (nr lub nazwa własna)
			</label>
			<div class="col-sm-9">
				<input type="text" class="form-control" name="signature" id="signature-input">
			</div>
		</div>
		<div class="form-group row">
			<label for="buyYear-input" class="col-sm-3 col-form-label">
				Rok zakupu
			</label>
			<div class="col-sm-9">
				<input type="text" class="form-control" name="buyYear" id="buyYear-input">
			</div>
		</div>
		<div class="form-group row">
			<label for="value-input" class="col-sm-3 col-form-label">
				Wartość (PLN)
			</label>
			<div class="col-sm-9">
				<input type="text" class="form-control" name="value" id="value-input">
			</div>
		</div>
		<div class="form-group row">
			<label for="description-input" class="col-sm-3 col-form-label">
				Opis
			</label>
			<div class="col-sm-9">
				<textarea name="description" id="description-input" class="form-control" rows="5"></textarea>
			</div>
		</div>
		<button class="btn btn-primary rounded-pill" id="submit-btn">
			<i class="icon icon-add"></i>
			Dodaj
		</button>
	</form>
</div>
