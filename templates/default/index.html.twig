{% extends 'base.html.twig' %}
{% use "module-contents.html.twig" %}

{% block javascripts %}
	{{ encore_entry_script_tags('app') }}
{% endblock %}

{% block title %}
	Kokpit
{% endblock %}

{% block header %}
	<header id="app-header" class="py-4 bg-primary">
		<div class="container">
			<div class="row align-items-center">
				<div class="col">
					<h1>
						{{ header_title }}
					</h1>
				</div>
				<div class="col-auto">
					{% block header_buttons %}
						<a href="{{ path('app_logout') }}" class="btn btn-outline-light rounded-pill">
							<i class="icon icon-power_settings_new"></i>
							<span class="d-none d-md-inline">
								Wyloguj
							</span>
						</a>

					{% endblock %}
				</div>
			</div>
		</div>
	</header>
{% endblock %}

{% block body %}

	<main id="main-view" class="py-5">
		{% block view_description %}
			{% if description is defined and description %}
				<div id="view-description" class="pb-5 container">
					{{ description | raw }}
				</div>
			{% endif %}
		{% endblock %}

		<div id="router-outlet">
			{% block main_view_content %}
				{# {{ block(view_block_name) }} #}
			{% endblock %}
		</div>

	</main>

	<div id="toast-container"></div>
{% endblock %}
